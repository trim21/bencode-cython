{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>trim21/renovate-config",
    "local>trim21/renovate-config:monthly"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "pip-compile-refresh",
    "commitMessageAction": "Refresh pip-compile outputs"
  },
  "pip-compile": {
    "fileMatch": [
      "pyproject.toml"
    ],
    "enabled": true
  },
  "pip_requirements": {
    "enabled": false
  }
}
